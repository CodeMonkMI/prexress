{
  "name": "@pxr/cli",
  "version": "0.1.0",
  "description": "A command-line tool for creating pxr projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pxr": "./dist/index.js"
  },
  "scripts": {
    "start": "node ./dist/index.js init",
    "dev": "tsc -watch && cp -r ./src/baseFiles ./dist/baseFiles && cp -r ./src/app ./dist/app ",
    "build": "tsc && cp -r ./src/baseFiles ./dist/baseFiles && cp -r ./src/app ./dist/app",
    "test": "jest",
    "clear": "rimraf dist",
    "check:types": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^14.0.0",
    "inquirer": "^12.6.3",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@pxr/eslint-config": "workspace:*",
    "@pxr/typescript-config": "workspace:*",
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.13.11",
    "rimraf": "^6.0.1"
  },
  "keywords": [],
  "author": "Monirul Islam",
  "license": "ISC"
}